<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    tools:context=".LoginActivity"
    android:theme="@style/Theme.Project64.NoActionBar"

    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/top_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">



                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="7thTeam"
                    android:textColor="#8102b7"
                    android:textSize="75sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý chấm công"
                android:textColor="#001764"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:hint="Nhập email của bạn"
                android:textColorHint="#858585"
                android:padding="10dp"
                android:textSize="16sp"
                android:inputType="textPersonName"
               android:background="@drawable/grey_bcakground" />
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:hint="Nhập mật khẩu"
                android:textColorHint="#858585"
                android:padding="10dp"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:background="@drawable/grey_bcakground" />

            <Button
                android:id="@+id/btn_login"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:background="@drawable/purple_background"
                android:textSize="23sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?"
                android:textColor="#04336a"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:background="#707070"
                android:layout_marginTop="32dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    style="@android:style/Widget.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/grey_bcakground"
                    android:drawableStart="@drawable/google"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Google login"
                    android:textColor="#636363"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button3"
                    style="@android:style/Widget.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/grey_bcakground"
                    android:drawableStart="@drawable/facebook"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Facebook login"
                    android:textColor="#636363"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:text="Không có tài khoản? Đăng kí"
                android:textAlignment="center"
                android:textColor="#04336a"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>